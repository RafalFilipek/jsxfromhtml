{
  "name": "jsxfromhtml",
  "repository" : {
    "type" : "git",
    "url" : "https://github.com/RafalFilipek/jsxfromhtml.git"
  },
  "version": "1.2.0",
  "description": "Universal HTML to JSX compiler",
  "main": "lib/index.js",
  "author": "Rafa≈Ç Filipek <rafal.filipek@gmail.com>",
  "contributors": [
    "Tyler Young <young@clearpath.org>"
  ],
  "license": "MIT",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "format": "prettier --write --parser flow --single-quote ./src/*",
    "flow-copy": "flow-copy-source src lib",
    "compile": "babel -d ./lib src --source-maps",
    "clean": "rimraf lib",
    "build": "npm run clean && npm run compile && npm run flow-copy",
    "precommit": "lint-staged",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "jest": {
    "verbose": true,
    "bail": true,
    "roots": [
      "tests"
    ],
    "testRegex": "/tests/.*(?:Test|Spec).js",
    "setupFiles": [
      "./tests/shim.js",
      "./tests/setup.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ]
  },
  "dependencies": {
    "htmlparser2": "^3.9.2",
    "stream": "^0.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-env": "^1.2.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^3.17.1",
    "eslint-plugin-react": "^6.10.0",
    "flow-bin": "^0.41.0",
    "flow-copy-source": "^1.1.0",
    "husky": "^0.13.2",
    "jest": "^19.0.2",
    "lint-staged": "^3.4.0",
    "nwb": "^0.15.6",
    "prettier": "^0.21.0",
    "publish-please": "^2.2.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "rimraf": "^2.6.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --parser flow --single-quote ./src/*",
      "git add"
    ]
  }
}
